#include <iostream>
using namespace std;
int main()
{
    int nilai[5];
    int hasil=0;
    for(int i=0; i<5; i++)
        {
            cout << "Input nilai ke-" << (i + 1 ) << ":";
            cin >> nilai[i];
        }
     cout << "Nilai yang Anda masukkan ..." << endl;
     for(int i=0; i<5; i++)
        {
            hasil+= nilai[i];
            cout << "\nHasil ke -" << (i + 1) << " adalah " << nilai[i] << endl;
        }
     cout << "\nTotal seluruh nilai ..." << endl << endl;
     cout << hasil << endl;
    return 0;
}
